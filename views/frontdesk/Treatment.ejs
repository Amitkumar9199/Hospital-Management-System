<% layout('layouts/boilerplate')%>
<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span> Treatment</h1>
    <form action="/admin/register" method="post" class="validated-form">
        <div class="form-group">
            <label>TreatmentID</label>
            <input type="number" class="form-control" name="TreatmentID" required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="form-group">
            <label>PatientID</label>
            <input type="number" class="form-control" name="PatientID" required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="form-group">
            <label>DoctorID</label>
            <input type="number" class="form-control" name="DoctorID" required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="Description" required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="form-group">
            <label>TreatmentDate</label>
            <input type="date" class="form-control" name="TreatmentDate" required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="form-group">
            <label for="TreatmentStatus">Treatment Status</label>
            <select name="TreatmentStatus" id="TreatmentStatus" class="form-control">
              <option value="Pending">Pending</option>
              <option value="Completed">Completed</option>
              <option value="Cancelled">Cancelled</option>
            </select>
          </div>
      <button type="submit" class="btn btn-warning btn-lg">Register</button>
    </form>
    <hr />
  </div>
</div>
